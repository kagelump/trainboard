{
  "name": "trainboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "fetch:holidays": "node scripts/fetch_holidays.js",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "typecheck": "tsc --noEmit",
    "start": "http-server -c-1 -p 8080",
    "format": "prettier --write \"src/**/*.{ts,js,tsx,jsx,json,md}\""
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "gh-pages": "^6.3.0",
    "http-server": "^14.1.1",
    "jsdom": "^27.1.0",
    "prettier": "^3.6.0",
    "typescript": "^5.9.0",
    "vite": "^7.1.0",
    "vitest": "^4.0.0"
  },
  "dependencies": {
    "lit": "^3.3.1"
  }
}
